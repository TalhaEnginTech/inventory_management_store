<%if user_signed_in? %>
  <h2><%= current_user.name %></h2>
 <%if current_user.role=="Admin" %>


    <h1 class="heading">Registered Employees</h1>
    <table class="table table-striped table-hover space">
      <thead class="thead-light">
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Edit</th>

      </thead>
      <tbody>
      <%@users.each do |user| %>
        <tr>


            <td><%=user.name %></td>
            <td><%=user.email %></td>
            <td><%=user.role %></td>
            <td><%= link_to 'Edit User', edit_users_edit_path(id: user.id)%></td>
          <td><%= link_to 'delete',
                          { controller: "users", action: "destroy", id: user.id },
                          data: { confirm: 'Are you sure?' },
                          method: :delete, class:"icon_color" %>
          </td>
         <%end %>
         </tr>
      </tbody>
    </table>

    <%else %>
    <table class="table table-striped table-hover space">
      <thead class="thead-light">
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Edit</th>

      </thead>
      <tbody>
      <tr>
        <td><%= current_user.name %></td>
        <td><%= current_user.email %></td>
        <td><%= current_user.role %></td>
      </tr>
      </tbody>
    </table>
      <%end %>
  <%else %>
  <h3>You need to sign in!</h3>
  <h4><%= link_to 'Sign In', new_user_session_path %></h4>
<%end %>